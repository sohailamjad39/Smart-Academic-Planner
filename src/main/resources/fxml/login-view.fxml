<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<BorderPane xmlns:fx="http://javafx.com/fxml" fx:controller="com.sap.smartacademicplanner.LoginController"
            stylesheets="@/styles.css"
            styleClass="root">

    <center>
        <VBox spacing="20" alignment="CENTER" styleClass="form-container">
            <Label text="Login" styleClass="title-label"/>

            <VBox spacing="15" alignment="CENTER_LEFT">
                <TextField fx:id="emailField" promptText="Email" styleClass="input-field"/>
                <PasswordField fx:id="passwordField" promptText="Password" styleClass="password-field"/>
            </VBox>

            <Button text="Login" onAction="#handleLogin" styleClass="login-button"/>

            <Label fx:id="statusLabel" styleClass="status-label"/>

            <Hyperlink text="Signup if you don't have an account"
                       onAction="#switchToSignUp"
                       styleClass="switch-link"/>
        </VBox>
    </center>

</BorderPane>