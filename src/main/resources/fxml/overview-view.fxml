<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.geometry.Insets?>

<BorderPane xmlns:fx="http://javafx.com/fxml"
            fx:controller="com.sap.smartacademicplanner.OverviewController"
            stylesheets="@/styles.css"
            styleClass="root">

    <!-- Top Navigation -->
    <top>
        <HBox spacing="10" alignment="CENTER_LEFT"
              style="-fx-padding: 10 20; -fx-background-color: #2c3e50;">
            <Label text="ðŸ“Š EduPlanner" style="-fx-font-size: 24px; -fx-text-fill: white;" />
            <Pane HBox.hgrow="ALWAYS"/>
            <Button text="â¬… Back" onAction="#goToDashboard" styleClass="switch-link"/>
        </HBox>
    </top>

    <!-- Center Content -->
    <center>
        <VBox spacing="20" alignment="TOP_CENTER" style="-fx-padding: 20;">

            <Label text="Your Weekly Overview" styleClass="title-label"/>

            <!-- Summary Cards -->
            <GridPane hgap="20" vgap="20">
                <columnConstraints>
                    <ColumnConstraints percentWidth="25"/>
                    <ColumnConstraints percentWidth="25"/>
                    <ColumnConstraints percentWidth="25"/>
                    <ColumnConstraints percentWidth="25"/>
                </columnConstraints>

                <rowConstraints>
                    <RowConstraints percentHeight="50"/>
                    <RowConstraints percentHeight="50"/>
                </rowConstraints>

                <!-- Row 0 -->
                <Label GridPane.rowIndex="0" GridPane.columnIndex="0" text="Total Tasks: 12" styleClass="summary-card" />
                <Label GridPane.rowIndex="0" GridPane.columnIndex="1" text="Completed: 8" styleClass="summary-card" />
                <Label GridPane.rowIndex="0" GridPane.columnIndex="2" text="Pending: 3" styleClass="summary-card" />
                <Label GridPane.rowIndex="0" GridPane.columnIndex="3" text="Due Soon: 2" styleClass="summary-card" />

                <!-- Row 1 â€“ You can add more here later -->
            </GridPane>

            <!-- Task Table -->
            <TableView fx:id="taskTable" styleClass="task-table" prefWidth="700" prefHeight="300">
                <columns>
                    <TableColumn text="Subject" fx:id="subjectCol" prefWidth="150"/>
                    <TableColumn text="Task Type" fx:id="taskTypeCol" prefWidth="120"/>
                    <TableColumn text="Due Date" fx:id="dueDateCol" prefWidth="120"/>
                    <TableColumn text="Est. Hours" fx:id="estHoursCol" prefWidth="100"/>
                    <TableColumn text="Status" fx:id="statusCol" prefWidth="100"/>
                </columns>
            </TableView>

            <!-- Action Buttons -->
            <HBox spacing="10" alignment="CENTER">
                <Button text="âž• Add New Task" onAction="#addNewTask" styleClass="nav-action-button"/>
                <Button text="ðŸ“ My Goals" onAction="#viewGoals" styleClass="nav-action-button"/>
                <Button text="ðŸ”„ Refresh" onAction="#refreshData" styleClass="nav-action-button"/>
            </HBox>

            <!-- Status Label -->
            <Label fx:id="statusLabel" styleClass="status-label"/>

        </VBox>
    </center>

</BorderPane>